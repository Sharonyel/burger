    <h1>EAT-DA-BURGER!</h1>

<div class="row">
  <div class="col-md-6">

    <h2>Add Your Burger!</h2>
    <form class="create-form">
      <input type="text" id="burgername" name="burger_name" placeholder="Enter A Delicious Burger">
      <button type="submit" class="addBtn">Submit</button>
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">

      <h2>Click a Burger to eat it!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <button class="eat-burger" data-id="{{id}}" data-newdev="{{this.devoured}}">{{burger_name}}</button>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">

      <h2>Burgers that you have eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <button class="devbtn">{{burger_name}}</button>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
